@{
    ViewData["Title"] = "Chefs";
}
@await Html.PartialAsync("_Navbar")
@model Chef
<div class="container">

    <div class="text-center mb-5">
        <h1 class="display-4">Check Out Our Roaster Of Chefs</h1>
    </div>
    <div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Number Of dishes</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Chef chef in ViewBag.Allchefs)
                    {
                        <tr>
                            <td>@chef.FirstName @chef.LastName</td>
                            <td>@chef.Age()</td>
                            <td>yeah yeah</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
