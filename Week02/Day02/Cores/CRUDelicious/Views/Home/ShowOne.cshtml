@model Dish
<h1 class="text-center display-4 mb-5">@Model.Name</h1>
<div class="d-flex flex-column gap-2 text-center ">
    <h3 class="text-muted">@Model.Name by @Model.Chef</h3>
    <h3>@Model.Description</h3>
    <div class="my-5
    ">
        <h3>Calaries : @Model.Calories</h3>
        <h3>Tastiness : @Model.Tastiness</h3>
    </div>
</div>
<form asp-action="DeleteDish" asp-controller="Home" method="post" class="d-flex justify-content-center gap-5">
    <input type="hidden" name="DishID" value="@Model.DishId">
    <input type="submit" value="Delete" class="btn btn-danger">
    <a class="btn btn-warning" href="@Model.DishId/edit">Edit</a>
</form>