@{
    ViewData["Title"] = "Edit Page";
}
@model Dish
<h1 class="text-center display-4 my-4">Edit @Model.Name</h1>
<div>
    <form asp-action="UpdateDish" asp-controller="home" method="post" class="row shadow p-5">
        <div class="col-4 d-flex flex-column gap-3">
            <input type="hidden" name="DishID" value="@Model.DishId">
            <h3>Chef's Name</h3>
            <input type="text" class="form-control w-75" asp-for="Chef">
            <span asp-validation-for="Chef" class="text-danger"></span>
            <h3>Name Of Dish</h3>
            <input type="text" class="form-control w-75" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
            <h3># Of Calories</h3>
            <input type="number" class="form-control w-75" asp-for="Calories">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="col-4 d-flex flex-column gap-3">
            <h3>Tastiness</h3>
            <select class="form-select w-75" asp-for="Tastiness">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div class="col-4 d-flex flex-column gap-3">
            <h3>Description</h3>
            <textarea class="form-control" cols="30" rows="10" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <button type="submit" class="btn btn-primary mt-5 w-75">Edit Dish</button>
        </div>
    </form>

</div>