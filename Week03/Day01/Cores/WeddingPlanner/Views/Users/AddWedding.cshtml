@{
    int UserId = (int)Context.Session.GetInt32("userId");
}
@model Wedding
@await Html.PartialAsync("_NavBar")


<div class="container mt-5">
        <h1 class="Display-4 text-center mb-4">
            Plan A Weeding
        </h1>
    <div class="card shadow">
        <div class="card-body p-5 ">
            <form asp-action="CreateWedding" asp-controller="Users" method="post" class="d-flex flex-column gap-4">
                <input type="hidden" asp-for="UserId" value="@UserId">
                <div class="col-8 d-flex flex-column">
                    <div>
                        <label asp-for="WeddingOne" class="form-label"></label>
                        <input asp-for="WeddingOne" class="form-control">
                        <span asp-validation-for="WeddingOne" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="WeddingTwo" class="form-label"></label>
                        <input asp-for="WeddingTwo" class="form-control">
                        <span asp-validation-for="WeddingTwo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label  asp-for="Date" class="form-label"></label>
                        <input  class="form-control" asp-for="Date">
                        <span class="text-danger" asp-validation-for="Date"></span>
                    </div>
                    <div>
                        <label asp-for="Adress" class="form-label"></label>
                        <input asp-for="Adress" class="form-control">
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <input type="submit" value="Create" class="btn btn-dark w-25">
                </div>
            </form>
        </div>
    </div>
</div>