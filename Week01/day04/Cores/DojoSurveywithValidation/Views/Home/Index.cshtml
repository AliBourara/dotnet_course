@{
    ViewData["Title"] = "Home Page";
}
@model Dojo 
<div class="container">
        <div class="row mt-5 d-flex flex-row justify-content-center border border-2 p-4">
            <div class="col-7 d-flex flex-column border border-2 p-4">
                <form asp-action="CreateForm" asp-controller="home" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Your Name :</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-row justify-content-between align-items-center gap-3 p-2">
                        <label asp-for="Location" class="form-label">Dojo Location :</label>
                        <span asp-validation-for="Location" class="text-danger"></span>
                        <select class="form-select"asp-for="Location" asp-items="Html.GetEnumSelectList<Loc>()" >
                            <option >Open this select menu</option>
                            <option value="Konoha">Konoha</option>
                            <option value="Tatuine">Tatuine</option>
                            <option value="Durotar">Durotar</option>
                        </select>
                    </div>
                    <div class="d-flex flex-row justify-content-between align-items-center gap-3 p-2">
                        <label asp-for="Language" class="form-label">Favorite Language :</label>
                        <span asp-validation-for="Language" class="text-danger"></span>
                        <select class="form-select" asp-items="Html.GetEnumSelectList<Lang>()" asp-for="Language"
                        >
                            <option >Open this select menu</option>
                            <option value="Klingon">Klingon</option>
                            <option value="Japanese">Japanese</option>
                            <option value="Orcish">Orcish</option>
                        </select>
                    </div>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                            style="height: 100px" asp-for="Comment"></textarea>
                        <label asp-for="Comment">Comments</label>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3 ">Submit</button>
                </form>
            </div>
        </div>
